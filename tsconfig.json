{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2023",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2023"
    ],
    "types": [
      "reflect-metadata"
    ],
    "paths": {
      "/@/components/*": [
        "src/*"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "jsx": "react-jsx"
  },
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "include": [
    "./src",
    "./types/*.d.ts"
  ]
}
